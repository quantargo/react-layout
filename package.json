{
  "name": "@quantargo/react-layout",
  "version": "3.0.0-alpha1",
  "description": "Drop-in layout components with zero configuration",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc --outDir dist/lib --declarationDir ./dist --declaration true && rollup -c",
    "start": "rollup -c -w",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quantargo/react-layout.git"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/runtime": "^7.11.2",
    "@rollup/plugin-typescript": "^8.2.0",
    "@storybook/addon-actions": "^6.2.3",
    "@storybook/addon-essentials": "^6.2.3",
    "@storybook/addon-links": "^6.2.3",
    "@storybook/react": "^6.2.3",
    "@storybook/theming": "^6.2.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-is": "^17.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-postcss": "^3.1.8",
    "standardx": "^5.0.0",
    "style-loader": "^1.2.1",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "keywords": [
    "react",
    "layout"
  ],
  "author": "Christian Kaindl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/quantargo/react-layout/issues"
  },
  "homepage": "https://github.com/quantargo/react-layout#readme",
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "globals": [
      "HTMLElement",
      "HTMLDivElement",
      "HTMLElementTagNameMap"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "csstype": "^3.0.7"
  }
}
